module oak.core/Tuple

def pair(x: ?x, y: ?y): ( ?x, ?y ) =
  ( x, y )

def first(( x, _ ): ( ?x, ?y )): ?x =
  x

def second(( _, y ): ( ?x, ?y )): ?y =
  y

def mapFirst(func: (?x):?a, ( x,  y ): ( ?x, ?y )): ( ?a, ?y ) =
  ( func(x), y )

def mapSecond(func: (?y):?b, ( x, y ): ( ?x, ?y )): ( ?x, ?b ) =
  ( x, func(y) )

def mapBoth(funcA: (?x):?a, funcB: (?y):?b, ( x, y ): ( ?x, ?y )): ( ?a, ?b ) =
  ( funcA(x), funcB(y) )
